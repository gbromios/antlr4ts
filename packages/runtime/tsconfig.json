{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "esnext",
		"lib": ["ESNext"],
		"noImplicitAny": true,
		"strict": true,
		"declaration": true,
		"preserveConstEnums": true,
		"types": ["node", "vitest/globals"],
    "noEmit": true,
    "esModuleInterop": true
	},
	"exclude": ["node_modules", "dist"]
}
